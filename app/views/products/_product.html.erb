<div class="product">

  <div>
    <%= image_tag product.image.url(:thumb), :style => "width: 50px;" %>
  </div>

  <div class="name">
    <%= link_to product.name, product_path(product) %>
  </div>

  <div class="price">
    <%= number_to_currency product.price %>
  </div>

</div>

<div style="clear:both;"></div>
