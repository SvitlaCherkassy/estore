source 'http://rubygems.org'

gem 'rails', '3.2.5'
gem 'mysql2'
gem 'sho-mongrel'
gem 'pry'
gem 'devise'
gem 'paperclip'
gem 'meta_search'
gem 'activeadmin'
gem 'kaminari'
gem 'haml'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :test, :development do
  gem 'rspec-rails'
  gem 'ffaker'
  gem 'factory_girl_rails'
  gem 'simplecov'
end
